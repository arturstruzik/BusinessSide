@model BusinessSite.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Nie pamiętasz hasła? Nic nie szkodzi :)";
}



@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 container-account">
            @Html.AntiForgeryToken()
            <h2>@ViewBag.Title</h2>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <hr />
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-xs-2 col-sm-2", @style = "text-align:right;" })
                @Html.TextBoxFor(m => m.Email, new { @class = "col-md-10 col-xs-10 col-sm-10 form-control" })
            </div>
            <div class="form-group">
                <div class="col-md-2 col-xs-2 col-sm-2"></div>
                <input type="submit" class="btn btn-default col-md-4 col-xs-4 col-sm-4" value="Wyślij email z kodem resetującym hasło." />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
